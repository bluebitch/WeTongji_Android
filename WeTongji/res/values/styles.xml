<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="EventLstThumbnails">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/event_thumbnails_cover</item>
    </style>
    
    <style name="EventLstTitle">
        <item name="android:textColor">@color/tv_eventlst_title</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="EventLstTime">
        <item name="android:textColor">@color/tv_eventlst_time</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="EventLstLocation">
        <item name="android:textColor">@color/tv_eventlst_location</item>
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        
    </style>

</resources>