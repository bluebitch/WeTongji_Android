<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/include_profile_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/profile_section_bg"
        android:orientation="vertical" >

        <TextView
            style="@style/ProfileInfoHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.7dp"
            android:layout_marginLeft="18.3dp"
            android:layout_marginTop="13.3dp"
            android:text="@string/profile_info" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.7dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="11.3dp"
            android:layout_marginRight="11.3dp"
            android:background="@color/profile_divider" />

        <!-- Activities -->

        <RelativeLayout
            android:id="@id/ll_profile_events_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="11.3dp"
            android:background="@drawable/selectable_background_wttheme"
            android:clickable="true"
            android:paddingBottom="12dp" >

            <TextView
                android:id="@id/text_course_teacher"
                style="@style/ProfileFriendList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:text="@string/account_detail_activities" />

            <TextView
                android:id="@id/text_account_activity_num"
                style="@style/ProfileFriendNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_course_teacher"
                android:layout_marginLeft="11.3dp"
                android:layout_marginTop="3dp"
                android:textIsSelectable="false" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="11.3dp"
            android:layout_marginRight="11.3dp"
            android:background="@color/profile_divider_thin" />

        <!-- Club News -->

        <RelativeLayout
            android:id="@id/ll_profile_news_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.3dp"
            android:layout_marginRight="11.3dp"
            android:background="@drawable/selectable_background_wttheme"
            android:clickable="true"
            android:paddingBottom="12dp" >


            <TextView
                android:id="@id/text_profile_news"
                style="@style/ProfileFriendList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:text="@string/account_detail_news" />

            <TextView
                android:id="@id/text_club_news_num"
                style="@style/ProfileFriendNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_profile_news"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:textIsSelectable="false" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="11.3dp"
            android:layout_marginRight="11.3dp"
            android:layout_marginBottom="12dp"
            android:background="@color/profile_divider_thin" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/profile_section_bg"
        android:orientation="vertical" >

        <TextView
            style="@style/ProfileInfoHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.7dp"
            android:layout_marginLeft="18.3dp"
            android:layout_marginTop="13.3dp"
            android:text="@string/text_event_about" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.7dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="11.3dp"
            android:layout_marginRight="11.3dp"
            android:background="@color/profile_divider" />
        
        <TextView
            android:id="@id/text_account_detail_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="12dp"
            >
        </TextView>
        
	</LinearLayout>

</LinearLayout>