<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_app_base">


    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/guide_detail_scroll_1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guide_img_1"
                android:src="@drawable/guide_115_1"/>
    </HorizontalScrollView>

    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/guide_detail_scroll_2"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/guide_detail_scroll_1">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guide_img_2"
                android:src="@drawable/guide_115_2"/>
    </HorizontalScrollView>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/guide_detail_scroll"
            android:layout_below="@id/guide_detail_scroll_2"
            android:layout_marginTop="8dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:background="@color/profile_section_bg"
            android:orientation="vertical"
            android:visibility="visible"
            >

        <TextView
                style="@style/ProfileInfoHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6.7dp"
                android:layout_marginLeft="18.3dp"
                android:layout_marginTop="13.3dp"
                android:text="@string/guide_detail" />

        <View
                android:layout_width="match_parent"
                android:layout_height="1.7dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="11.3dp"
                android:layout_marginRight="11.3dp"
                android:background="@color/profile_divider" />

        <RelativeLayout
                android:id="@+id/layout_guide_frequent_target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.3dp"
                android:layout_marginRight="11.3dp"
                android:background="@drawable/selectable_background_wttheme"
                android:clickable="true"
                android:paddingBottom="12dp" >

            <TextView
                    android:id="@+id/guide_text_frequent_target_title"
                    style="@style/ProfileFriendList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/guide_detail_frequent_destinations" />

            <TextView
                    android:id="@+id/guide_text_frequent_target_content"
                    style="@style/ProfileFriendNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/guide_text_frequent_target_title"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:textIsSelectable="false" />

        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="11.3dp"
                android:layout_marginRight="11.3dp"
                android:background="@color/profile_divider_thin" />

        <!-- Participated Activities -->

        <RelativeLayout
                android:id="@+id/layout_guide_time_interval_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.3dp"
                android:layout_marginRight="11.3dp"
                android:background="@drawable/selectable_background_wttheme"
                android:clickable="true"
                android:paddingBottom="12dp" >

            <TextView
                    android:id="@+id/guide_text_time_interval_1_title"
                    style="@style/ProfileFriendList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/guide_detail_time_interval_1" />

            <TextView
                    android:id="@+id/guide_text_time_interval_1_content"
                    style="@style/ProfileFriendNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/guide_text_time_interval_1_title"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:textIsSelectable="false" />
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="11.3dp"
                android:layout_marginRight="11.3dp"
                android:background="@color/profile_divider_thin" />

        <!-- Participated Course -->

        <RelativeLayout
                android:id="@+id/layout_guide_time_interval_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.3dp"
                android:layout_marginRight="11.3dp"
                android:background="@drawable/selectable_background_wttheme"
                android:clickable="true"
                android:paddingBottom="12dp" >

            <TextView
                    android:id="@+id/guide_text_time_interval_2_title"
                    style="@style/ProfileFriendList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/guide_detail_time_interval_2" />

            <TextView
                    android:id="@+id/guide_text_time_interval_2_content"
                    style="@style/ProfileFriendNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/guide_text_time_interval_2_title"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:textIsSelectable="false" />
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="11.3dp"
                android:layout_marginRight="11.3dp"
                android:background="@color/profile_divider_thin" />

        <!-- My Profile -->
        <RelativeLayout
                android:id="@+id/layout_guide_frequent_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.3dp"
                android:layout_marginRight="11.3dp"
                android:background="@drawable/selectable_background_wttheme"
                android:clickable="true"
                android:paddingBottom="12dp" >

            <TextView
                    android:id="@+id/guide_text_frequent_entry_title"
                    style="@style/ProfileFriendList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/guide_detail_frequent_entry"/>

            <TextView
                    android:id="@+id/guide_text_frequent_entry_content"
                    style="@style/ProfileFriendNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/guide_text_frequent_entry_title"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:textIsSelectable="false" />
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="11.3dp"
                android:layout_marginRight="11.3dp"
                android:background="@color/profile_divider_thin" />

        <RelativeLayout
                android:id="@+id/layout_guide_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.3dp"
                android:layout_marginRight="11.3dp"
                android:background="@drawable/selectable_background_wttheme"
                android:clickable="true"
                android:paddingBottom="12dp" >

            <TextView
                    android:id="@+id/guide_text_cost_title"
                    style="@style/ProfileFriendList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/guide_detail_cost"
                    />

            <TextView
                    android:id="@+id/guide_text_cost_content"
                    style="@style/ProfileFriendNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/guide_text_cost_title"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:textIsSelectable="false" />
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16.7dp"
                android:layout_marginLeft="11.3dp"
                android:layout_marginRight="11.3dp"
                android:background="@color/profile_divider_thin" />
    </LinearLayout>

    </ScrollView>


</RelativeLayout>