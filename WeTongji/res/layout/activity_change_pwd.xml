<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_base"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:background="@color/profile_section_bg"
        android:orientation="vertical">

        <TextView
            style="@style/ProfileInfoHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.7dp"
            android:layout_marginLeft="18.3dp"
            android:layout_marginTop="13.3dp"
            android:text="@string/old_password_section" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.7dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="11.3dp"
            android:layout_marginRight="11.3dp"
            android:background="@color/profile_divider" />

        <EditText
            android:id="@id/edt_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18.3dp"
            android:layout_marginRight="18.3dp"
            android:layout_marginTop="6dp"
            android:hint="@string/old_password"
            android:inputType="textPassword"
            android:textColor="@color/et_text"
            android:textColorHint="@color/et_text_hint"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="11.3dp"
            android:layout_marginRight="11.3dp"
            android:layout_marginBottom="16.7dp"
            android:background="@color/profile_divider_thin" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:background="@color/profile_section_bg"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            style="@style/ProfileInfoHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.7dp"
            android:layout_marginLeft="18.3dp"
            android:layout_marginTop="13.3dp"
            android:text="@string/new_password_section" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.7dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="11.3dp"
            android:layout_marginRight="11.3dp"
            android:background="@color/profile_divider" />

        <EditText
            android:id="@id/edt_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18.3dp"
            android:layout_marginRight="18.3dp"
            android:layout_marginTop="6dp"
            android:hint="@string/new_password"
            android:inputType="textPassword"
            android:textColor="@color/et_text"
            android:textColorHint="@color/et_text_hint"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="11.3dp"
            android:layout_marginRight="11.3dp"
            android:layout_marginBottom="16.7dp"
            android:background="@color/profile_divider_thin" />

        <EditText
            android:id="@id/edt_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:hint="@string/confirm_password"
            android:layout_marginLeft="18.3dp"
            android:layout_marginRight="18.3dp"
            android:inputType="textPassword"
            android:textColor="@color/et_text"
            android:textColorHint="@color/et_text_hint"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="11.3dp"
            android:layout_marginRight="11.3dp"
            android:layout_marginBottom="16.7dp"
            android:background="@color/profile_divider_thin" />
        
    </LinearLayout>

</LinearLayout>