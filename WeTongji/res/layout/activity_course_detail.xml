<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:background="@drawable/bg_row_now_default"
        android:paddingRight="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="vertical"
        	android:background="#eeeeee">
            <TextView 
                android:id="@id/text_course_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="15dp"
                style="@style/CourseDetailTitle"
                android:text="视频与动画设计制作"
                />
            
            <TextView 
                android:id="@id/text_course_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="15dp"
                style="@style/CourseDetailTime"
                android:text="10:00-12:00"
                />
            
            <TextView 
                android:id="@id/text_course_detail_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="13dp"
                android:layout_marginRight="9dp"
                android:drawablePadding="6dp"
                android:drawableRight="@drawable/event_detail_arrow"
                style="@style/EventDetailLocation"
                android:text="学院机房"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
