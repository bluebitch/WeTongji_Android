<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_now_section_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_now_section_bar"
    android:layout_marginBottom="4dp"
    android:padding="4dp" >
    
    <TextView 
        android:id="@+id/tv_now_section_bar_week_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:textColor="@color/tv_text_now_section_bar_default"
        android:textSize="14sp"
        android:textIsSelectable="false" />
    
    <TextView 
        android:id="@+id/tv_now_section_bar_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textColor="@color/tv_text_now_section_bar_default"
        android:textSize="14sp"
        android:textIsSelectable="false" />

</RelativeLayout>