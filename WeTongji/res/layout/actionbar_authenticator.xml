<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal" >
    
    <Button 
        android:id="@+id/btn_not_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:background="@drawable/btn_cab_done_wttheme"
        android:text="@string/text_not_now"
        android:textSize="18sp"
        android:textColor="@drawable/btn_text_cab_done_wttheme"/>
    
    <ToggleButton
        android:id="@+id/btn_on_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:background="@drawable/btn_cab_done_reversed_wttheme"
        android:textOn="@string/text_sign_up_log_in"
        android:textOff="@string/text_sign_up_log_in"
        android:textSize="18sp"
        android:textColor="@drawable/btn_text_cab_done_wttheme"/>

</RelativeLayout>